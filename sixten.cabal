                       ansi-wl-pprint,
                       base >=4.8 && <4.10,
                       bifunctors,
                       bound,
                       containers,
                       directory,
                       filepath,
                       hashable,
                       mmorph,
                       monad-st,
                       mtl,
                       optparse-applicative,
                       parsers,
                       prelude-extras,
                       process,
                       semigroups,
                       temporary,
                       text,
                       transformers,
                       trifecta,
                       unordered-containers,
                       vector,
                       void
