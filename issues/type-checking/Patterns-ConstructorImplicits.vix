data Impl where
  impl1 : forall {m}{A : Type {m}}. Ptr A -> Impl
  impl2 : forall {m}{n}{A : Type {m}}{B : Type {n}}. Ptr A -> Ptr B -> Impl

test (impl1 ptr) = 1
test (impl2 ptr1 ptr2) = 2

test2 (impl1 {m}{A} ptr) = m
test2 (impl2 {m}{n}{A}{B} ptr1 ptr2) = addSize m n

test3 : Impl -> Size
test3 (impl1 ptr) = 1
test3 (impl2 ptr1 ptr2) = 2

test4 : Impl -> Size
test4 (impl1 {m}{A} ptr) = m
test4 (impl2 {m}{n}{A}{B} ptr1 ptr2) = addSize m n
